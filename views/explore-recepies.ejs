    background-color: #4169e1;
    color: white;
    border-radius: 5px;
    transition: all 0.5s;
  }

  .section1-btn:hover {
    box-shadow: 5px 5px 18px #708de3;
    transform: scale(1.1);
  }

  .CheesyCravings-btn {
    cursor: pointer;
    border: none;
    padding: 10px;
    /* width: 100%; */
    margin-top: 10px;
    background-color: #4169e1;
    color: white;
    border-radius: 5px;
    transition: all 0.5s;
  }

  .CheesyCravings-btn:hover {
    box-shadow: 5px 5px 18px #708de3;
    transform: scale(1.1);
  }

  .maincourse {
    cursor: pointer;
    border: none;
    padding: 10px;
    /* width: 100%; */
    margin-top: 10px;
    background-color: #4169e1;
    color: white;
    border-radius: 5px;
    transition: all 0.5s;
  }

  .maincourse:hover {
    box-shadow: 5px 5px 18px #708de3;
    transform: scale(1.1);
  }

  .section-1 h1 {
    font-size: 2em;
  }


  /*  HERE SECTION-2 IS STARTING */

  .section-2 {
    display: flex;
    flex-direction: column;
    align-items: center;
    background-color: rgb(172, 219, 172);
    background-image: url(/images/dark-green.png);
  }

  .order {
    padding: 5px 10px;
    background-color: rgb(247, 247, 247);
    border-radius: 5px;
    display: flex;
    flex-direction: column;
    align-items: center;
    margin: 30px;
    height: 295px;
    width: 275px;
    transition: all 0.5s;
  }

  .unordered-li .cart-btn {
    padding: 12px 15px;
    border: none;
    background-color: royalblue;
    color: white;
    cursor: pointer;
    transition: all 0.5s;
    border-radius: 5px;
  }

  .unordered-li .cart-btn:hover {
