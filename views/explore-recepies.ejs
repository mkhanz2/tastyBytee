    justify-content: space-evenly;
    align-items: center;
  }

  .logo {
    width: 50px;
    height: 50px;
    display: block;
  }

  li {
    display: flex;
    align-items: center;
    justify-content: center;
    list-style: none;
    font-size: xx-large;
  }

  .navbar {
    background-image: url(/images/istockphoto-488010990-170667a-removebg-preview.png);
  }

  a {
    text-decoration: none;
    padding: 16px;
    color: black;
    font-size: 1em;
    transition: all 0.5s;
  }


  /*  HERE IS THE SECTION-1 */


  .section-1 {
    padding: 10px 15px;
    display: flex;
    justify-content: space-around;
    flex-wrap: wrap;
    align-items: center;
    gap: 50px;
    margin-top: 3%;
    margin-bottom: 1%;
  }

.btn-category{
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 12px;
}


  .section1-btn {
    cursor: pointer;
    border: none;
    padding: 10px;
