<style>
  * {
    margin: 0;
    padding: 0;
  }

  p {
    font-size: 1em;
  }

  body {
    margin: 0;
    padding: 0;
    font-family: "Baloo 2";
    font-weight: 400;
    font-style: normal;
    background-image: url(/images/istockphoto-488010990-170667a-removebg-preview.png);
  }

  /* ENTIRE SECTION */

  .section {
    display: flex;
    flex-direction: column;
    gap: 20px;
    height: 100vh;
    width: 100vw;
    overflow-x: hidden;
  }

  /* THIS SECTION WILL BE FOR "NAVBAR" */

  .unordered-li {
    font-weight: bold;
    display: flex;
    justify-content: space-evenly;
    align-items: center;
  }

  .logo {
    width: 50px;
    height: 50px;
    display: block;
  }

  li {
    display: flex;
    align-items: center;
    justify-content: center;
    list-style: none;
    font-size: xx-large;
  }

  a {
    text-decoration: none;
    padding: 16px;
    color: black;
    font-size: 1em;
    transition: all 0.5s;
  }

  .unordered-li .cart-btn {
    padding: 12px 15px;
    border: none;
    background-color: royalblue;
    color: white;
    cursor: pointer;
    transition: all 0.5s;
    border-radius: 5px;
  }

  .unordered-li .cart-btn:hover {
    background-color: rgb(82, 116, 220);
    transform: scale(1.1);
  }

  .wishList-btn {
    padding: 12px 15px;
    border: none;
    color: white;
    border-radius: 5px;
    background-color: palevioletred;
    transition: all 0.5s;
    cursor: pointer;
  }

  .wishList-btn:hover {
    background-color: rgb(216, 124, 155);
    transform: scale(1.1);
  }

  .section-2 {
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .sectoin2-grid {
    margin-top: 20px;
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 15px;
  }

  /*  transform prop */
  .sectoin2-grid>div {
    transition: all 0.5s;
  }
 

  .order {
    padding: 5px 10px;
    background-color: rgb(247, 247, 247);
    border-radius: 5px;
    display: flex;
    flex-direction: column;
    align-items: center;
    margin: 30px;
    height: 290px;
    width: 275px;
    transition: all 0.5s;
  }

  .section2-btn {
    cursor: pointer;
    border: none;
    padding: 10px;
    width: 100%;
    margin-top: 10px;
    background-color: #4169e1;
    color: white;
    border-radius: 5px;
    transition: all 0.5s;
  }

  .order-history{
     padding: 12px 15px;
    border: none;
    color: white;
    border-radius: 5px;
    background-color: green;
    transition: all 0.5s;
    cursor: pointer;
  }

  .order-history:hover {
    background-color: rgb(15, 134, 15);
    transform: scale(1.1);
  }

  .item-img {
    margin-top: 20px;
    height: 120px;
  }


  .section2-btn:hover {
    box-shadow: 5px 5px 18px #708de3;
    transform: scale(1.1);
  }


  @media (max-width: 650px) {
    .sectoin2-grid {
      display: grid;
      grid-template-columns: repeat(1, 1fr);
    }
  }

  @media (max-width: 640px) {
    .unordered-li {
      display: flex;
      flex-direction: column;
    }
  }
</style>

